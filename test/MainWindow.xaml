<Window x:Class="test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:test"
        mc:Ignorable="d" ResizeMode="NoResize"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Frame x:Name="Main" NavigationUIVisibility="Hidden" Margin="0, 45, 0, 0"/>
        <WrapPanel>
            <Button Click="Button1_Click" Content="Page1" Background="Black" Foreground="White" Height="35" Width="100"></Button>
            <Button Click="Button2_Click" Content="Page2" Background="Black" Foreground="White" Height="35" Width="100" Margin="10, 0, 0, 0"></Button>
            <TextBox x:Name="NameBox" Width="100" Margin="10, 0, 10, 0"></TextBox>
            <TextBox x:Name="SurnameBox" Width="100" Margin="10, 0, 10, 0"></TextBox>
            <Button x:Name="CreateUser" Width="100" Height="35" Click="CreateUser_Click" Background="Black" Foreground="White"></Button>
        </WrapPanel>
    </Grid>
</Window>
