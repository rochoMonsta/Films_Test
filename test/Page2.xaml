                            <TextBlock Text="9.3"
                                   Foreground="White"
                                   HorizontalAlignment="Right"
                                   TextAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontFamily="helvetica"
                                   FontWeight="Light"
                                   Margin="1, 0, 1, 0"
                                   FontSize="14"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
