                        <StackPanel Orientation="Horizontal" Margin="3, 0, 0, 0" Width="40">
                            <materialDesign:PackIcon Kind="StarCircleOutline" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Gold" Width="20" Height="20"/>
                            <TextBlock Text="7.8"
                                   Foreground="White"
                                   HorizontalAlignment="Right"
                                   TextAlignment="Center"
